{
  "name": "cucumber-playwright-demo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "cucumber-js --require features/**/*.js",
    "test:headed": "PWDEBUG=1 node ./node_modules/.bin/cucumber-js --require features/**/*.js",
    "postinstall": "git config core.hooksPath .husky",
    "check:features": "node scripts/check_features.js"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "chai": "^6.2.2",
    "playwright": "^1.40.0",
    "husky": "^9.0.0"
  }
}
